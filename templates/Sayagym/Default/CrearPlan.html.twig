                    {{ form_label(form.rutina) }}
                    {{ form_widget(form.rutina, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.enfoque) }}
                    {{ form_widget(form.enfoque, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
